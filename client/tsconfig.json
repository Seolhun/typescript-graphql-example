{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom"
    ],
    // "strict": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "noImplicitThis": true,
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedParameters": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
